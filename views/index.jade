extends layout

block head
  script(src="/socket.io/socket.io.js")
  script(src="client.js")

block content
  h1(style="margin-left:30px; margin-top:30px;") Photobooth
  div(style="text-align: center; margin-left: auto; margin-right: auto; font-size: 20px;") Tap a Charlie Card if you have one or click if you don't
  //  a(href="/login") Login with Facebook
  #notice(style="width:550px;margin-left: -270px; left:50%; text-align: center; position: absolute; background-color:rgb(83, 83, 83); height:230px; border-radius: 15px;")
    div(style="padding:30px; font-size: 60px; line-height:60px; color:white;") 1. Allow camera! 2. Tap a card or click!
  #countdown(style="display: none; width:550px;margin-left: -270px; left:50%; text-align: center; position: absolute; background-color:transparent; height:230px; border-radius: 15px; font-size: 300px; margin-top:100px; color: rgb(255, 0, 0);")
    | 3
  #afterPhoto(style="display:none; width:550px;margin-left: -270px; left:50%; text-align: center; position: absolute; background-color:rgb(83, 83, 83); height:230px; border-radius: 15px;")
    div(style="padding:30px; font-size: 60px; line-height:60px; color:white;")
      a#sendToFB(href="/send_to_fb") Send this photo to Facebook
      br
      a#closeAfterPhoto(style="font-size:20px; line-height:20px;") no thanks
  #savedPhoto(style="display:none; width: 800px; margin-left: -400px; left: 50%; top: 10px; text-align: center; position: absolute; background-color: rgb(83, 83, 83); height: 80px; border-radius: 15px;")
    div#saveMessage(style="padding:30px; font-size: 30px; line-height:30px; color:white;")
  div(style="text-align:center")
    video(autoplay)
    img#finshedPic(style="float:right;", src="")
    canvas(style="display:none;")
